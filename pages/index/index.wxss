page{
  padding: 0 10rpx;
}
/*首页导航*/
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  font-size: 30rpx;
  padding: 20rpx 40rpx;
  display: inline-block;
  text-align: center;
  color: rgb(255, 102, 102);
}
.nav_item.active{
  border-bottom: 5rpx solid red;
}
/*轮播图*/
.swiper{
  margin-top: 10rpx;
}
.swiper swiper{
  width: 100%;
  height: 230rpx;
}
.swiper navigator{
  width: 100%;
  height: 100%;
}
.swiper image{
  width: 100%;
  height: 100%;
}
/*视频列表*/
.video{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_item{
  width: 49%;
}
.video_image{
  width: 100%;
  position: relative;
}
.video_image image{
  width: 100%;
  border-radius: 14rpx;
}
.video_image .video_info{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 15rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: space-around;
}
.video_item .video_desc{
  font-size: 26rpx;
  color: rgb(138, 128, 128);
  padding: 0 20rpx;
  
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;

}
