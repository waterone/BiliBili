/* pages/detail/detail.wxss */
.main{
  padding: 10rpx;
}

.video video{
  width: 100%;
}
.video_text{
  font-size: 26rpx;
}
.video_detail{
  color: #666;
  font-size: 20rpx;
  margin-top: 5rpx;
}
.video_detail .video_author{
  color: rgb(0, 0, 0);
  padding-right: 8rpx;
}
.video_detail .video_read{
  padding:0 8rpx; 
}
/*推荐视频*/
.others{
  padding:10rpx 0;
  margin-top: 10rpx;
}
.others_item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.others_item image{
  flex: 1;
  border-radius: 10rpx;
}
.others_item .other_info{
  flex: 2;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #666;
}
.other_info .other_text{
  color: pink;
}

/*评论*/
comments{
  margin-top: 10rpx;
}
.comment_item{
  width: 100%;
  padding: 10rpx;
  border-bottom: 2rpx solid rgb(148, 141, 141);
  display: flex;
  justify-content: space-between;
}
.comment_item .comment_image{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment_image image{
  width: 70%;
  border-radius: 50%;
}
.comment_item .comment_info{
  flex: 7;
  font-size: 26rpx;
}
.comment_info .info_top{
  padding-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}
.comment_info .info_top .time{
  float: right;
}